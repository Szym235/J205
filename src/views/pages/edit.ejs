<%- include('../partials/header') %>

<main>
    <h2>Edytuj pizzę</h2>
    <form action="/edit/<%= pizza._id %>" method="POST">
        <input type="text" name="name" placeholder="Nazwa" value="<%= pizza.name %>" required><br>
        <textarea name="description" placeholder="Treść" required><%= pizza.description %></textarea><br>
        <input type="number" name="price" placeholder="Cena" value="<%= pizza.price %>" required><br>
        <button type="submit">Zapisz zmiany</button>
    </form>
</main>
 
